<Window x:Class="FlightsMap.Windows.WinFlightDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightsMap.Windows"
        mc:Ignorable="d"
        Height="450" Width="409.416" ResizeMode="NoResize">

    <Window.Resources>
        <ControlTemplate x:Key="pushpin_customIn">
            <StackPanel >
                <Image  Source="airplane_landing_100px.png"  />
            </StackPanel>
        </ControlTemplate>
        <ControlTemplate x:Key="pushpin_customOut">
            <StackPanel >
                <Image  Source="airplane_take_off_48px.png"  />
            </StackPanel>
        </ControlTemplate>
    </Window.Resources>

    <Grid>
        <Grid HorizontalAlignment="Center" Height="81" VerticalAlignment="Top" Width="409">
            <Label Content="{Binding FlightNumber}" HorizontalAlignment="Left" Height="39" Margin="10,10,0,0" VerticalAlignment="Top" Width="297"/>
            <Label Content="{Binding AirlineCompany}" Margin="10,40,282,10"/>
        </Grid>
        <Grid HorizontalAlignment="Center" Height="146" Margin="0,81,0,0" VerticalAlignment="Top" Width="409">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="{Binding Source}" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="62" Width="76"/>
            <Label Grid.Column="1" Content="{Binding Destination}" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="62" Width="76"/>
            <Label  Grid.Column="0" Content="{Binding SourceName}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="76" Margin="0,69,0,0"/>
            <Label  Grid.Column="1" Content="{Binding DestinationName}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="76" Margin="0,69,0,0"/>
            <Image  Source="{Binding StatusAirplane}" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="71" Margin="167,10,0,0" VerticalAlignment="Top" Width="74"/>

        </Grid>

    </Grid>
</Window>
